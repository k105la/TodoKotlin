<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Creating custom shape for ShapeableImageViews' within MaterialCardView's -->
    <style name="ShapeAppearance.Todo.CardView.ImageView">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Todo.Indicator" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Todo.CardView.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">10dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Todo.CardView.Text.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Todo.CardView.Text.Subtile" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

</resources>